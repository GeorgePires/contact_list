<div class="center">
  <% if resource.errors.any? %>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <% resource.errors.full_messages.each do |msg| %>
            <%= content_tag :div, msg, :id => "flash_error" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="registration-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= image_tag ('login-icon.svg'),class: "icon" %>
    <h2>Sign up</h2>

    <div class="form-group">
        <%= f.error_notification %>
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'Nome',
                    input_html: { autocomplete: "name", class: 'form-control item' }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'Email',
                    input_html: { autocomplete: "email" },
                    input_html: { class: "form-control item"} %>

        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'Senha',
                    input_html: { autocomplete: "new-password" },
                    input_html: { class: "form-control item"} %>

        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder: 'Confirmar senha',
                    input_html: { autocomplete: "new-password" },
                    input_html: { class: "form-control item"} %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary', id: 'btn' %>
      </div>

    <%= render "devise/shared/links" %>

    <% end %>

    </div>
</div>
