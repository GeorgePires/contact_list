<div class="center">
  <div class="registration-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Sign up</h2>
      <%= f.error_notification %>
    
      <div class="form-group">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'Nome',
        input_html: { autocomplete: "name", class: 'form-control item' }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'Email',
                    input_html: { autocomplete: "email" }, 
                    input_html: { class: "form-control item"} %>
    
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'Senha',
                    input_html: { autocomplete: "new-password" },
                    input_html: { class: "form-control item"} %>
        
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder: 'Confirmar senha',
                    input_html: { autocomplete: "new-password" },
                    input_html: { class: "form-control item"} %>
      </div>
    
      <div class="form-group">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
      </div>
      
    <%= render "devise/shared/links" %>
    
    <% end %>
    
    </div>
</div>